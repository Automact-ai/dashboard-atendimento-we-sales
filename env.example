# Dashboard de Atendimento - Variáveis de Ambiente

# ===========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ===========================================
DATABASE_PATH=./database/dashboard.db

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================
# IMPORTANTE: Gere chaves secretas seguras em produção
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_mude_em_producao
SESSION_SECRET=seu_session_secret_super_seguro_aqui_mude_em_producao

# ===========================================
# CONFIGURAÇÕES DO SERVIDOR
# ===========================================
PORT=3001
NODE_ENV=development

# URL do frontend (para CORS)
FRONTEND_URL=http://localhost:3000

# ===========================================
# CONFIGURAÇÕES DE LOGS
# ===========================================
LOG_LEVEL=info
LOG_DIR=./logs

# ===========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ===========================================
# Nome da aplicação
APP_NAME=Dashboard de Atendimento

# Versão da aplicação
APP_VERSION=1.0.0

# ===========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ===========================================
# Máximo de requests por IP (por janela de 15 min)
RATE_LIMIT_MAX=100

# Máximo de tentativas de login por IP (por janela de 15 min)
LOGIN_RATE_LIMIT_MAX=5

# ===========================================
# CONFIGURAÇÕES DE SESSÃO
# ===========================================
# Tempo de expiração da sessão em horas
SESSION_TIMEOUT_HOURS=24

# Máximo de sessões simultâneas por usuário
MAX_SESSIONS_PER_USER=5

# ===========================================
# CONFIGURAÇÕES DE BACKUP
# ===========================================
# Diretório para backups automáticos
BACKUP_DIR=./backups

# Intervalo de backup automático (em horas)
BACKUP_INTERVAL_HOURS=24

# ===========================================
# CONFIGURAÇÕES DE EMAIL (Opcional)
# ===========================================
# Para notificações e recuperação de senha
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# ===========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===========================================
# Habilitar logs detalhados em desenvolvimento
DEBUG=false

# Habilitar CORS para todos os domínios (apenas dev)
CORS_ALLOW_ALL=false 